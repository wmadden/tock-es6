#!/bin/bash

if [ "$1" = "-s" ]; then
  silent=true
  shift
fi

for command in $@; do
  if $silent; then
    parallel_commands="${parallel_commands} 'bin/run -s ${command}'";
  else
    parallel_commands="${parallel_commands} 'bin/run ${command}'";
  fi
done

command="bin/exec parallelshell ${parallel_commands}"
sh -c "${command}"
