{
  "name": "tock-es6",
  "version": "1.0.0",
  "description": "Tock written in ES6",
  "main": "gulpfile.js",
  "scripts": {
    "build": "bin/run-all copy-runtime-deps build-css build-js build-html",
    "build-css": "cp -r src/css out",

    "prebuild-js": "npm run -s lint-js",
    "build-js": "babel src/js --out-dir out/js",

    "copy-runtime-deps": "mkdir -p out/js/lib && cp bower_components/system.js/dist/system.src.js out/js/lib && cp node_modules/es6-module-loader/dist/es6-module-loader.src.js out/js/lib/es6-module-loader.js",
    "lint-js": "node_modules/eslint/bin/eslint.js src/js",
    "build-html": "cp src/static/index.html out/index.html",

    "serve": "browser-sync start --config browser-sync-config.js",

    "watch": "parallelshell 'npm run -s watch-css' 'npm run -s watch-js' 'npm run -s watch-html'",
    "watch-css": "nodemon -q -w src -w bower_components --ext 'css' --exec 'npm run -s build-css'",
    "watch-js": "nodemon -q -w src -w bower_components --ext 'js,jsx' --exec 'npm run -s build-js && echo'",
    "watch-html": "nodemon -q -w src --ext 'html' --exec 'npm run -s build-html'"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wmadden/tock-es6.git"
  },
  "bugs": {
    "url": "https://github.com/wmadden/tock-es6/issues"
  },
  "homepage": "https://github.com/wmadden/tock-es6",
  "devDependencies": {
    "amd-optimize": "^0.4.3",
    "browser-sync": "^2.6.5",
    "es6-module-loader": "^0.16.6",
    "material-ui": "^0.7.5",
    "react": "^0.13.2"
  },
  "dependencies": {
    "eslint-plugin-react": "^2.2.0"
  }
}
